{
  "compilerOptions": {
    /* ğŸ’¡ Cible moderne et rapide */
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],

    /* ğŸ’ª SÃ©curitÃ© et performance */
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": false,
    "isolatedModules": true,

    /* âš™ï¸ CompatibilitÃ© ESM (Next.js 14+ et Tailwind 4) */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* âš¡ï¸ JSX moderne pour React 18+ */
    "jsx": "preserve",

    /* ğŸš€ IncrÃ©mental = builds plus rapides */
    "incremental": true,

    /* ğŸ§­ Base paths / alias */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* ğŸ”Œ Plugin Next.js (important pour autocomplÃ©tion et TS integration) */
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
